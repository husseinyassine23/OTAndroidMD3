<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/item_height"
    android:id="@+id/llItem"
    android:background="@color/timesales_light_row"
    android:padding="@dimen/mini_padding"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvStockItem"
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:paddingTop="@dimen/mini_padding"
        android:paddingBottom="@dimen/mini_padding"
        android:text="@string/stock_id"
        android:ellipsize="end"
        android:textColor="?attr/colorValues"
        android:textSize="@dimen/small" />

    <TextView
        android:id="@+id/tvTypeItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="0.55"
        android:gravity="center"
        android:padding="@dimen/mini_padding"
        android:text="@string/type"
        android:textColor="?attr/colorValues"
        android:textSize="@dimen/small" />

    <TextView
        android:id="@+id/tvPriceItem"
        android:layout_width="0dp"
        android:layout_weight="0.76"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:padding="@dimen/mini_padding"
        android:gravity="center"
        android:textDirection="ltr"
        android:text="@string/price"
        android:textColor="?attr/colorValues"
        android:textSize="@dimen/small" />

    <TextView
        android:id="@+id/tvQuantityItem"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:padding="@dimen/mini_padding"
        android:text="@string/quantity"
        android:textDirection="ltr"
        android:gravity="center"
        android:textColor="?attr/colorValues"
        android:textSize="@dimen/small" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvChangeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:padding="@dimen/mini_padding"
            android:text="@string/change"
            android:textDirection="ltr"
            android:textColor="?attr/colorValues"
            android:textSize="@dimen/small" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/ivImage"
            android:layout_gravity="center_horizontal|center_vertical"   />

    </LinearLayout>

    <TextView
        android:id="@+id/tvTimeItem"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:textDirection="ltr"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:paddingTop="@dimen/mini_padding"
        android:paddingBottom="@dimen/mini_padding"
        android:text="@string/time_sales"
        android:gravity="end"
        android:textColor="?attr/colorValues"
        android:textSize="@dimen/small" />
</LinearLayout>