<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rootLayout"
    android:background="?attr/colorLight"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layoutDirection="ltr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorDarkHeader"
            android:elevation="4dp"
            android:title="null">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:padding="@dimen/padding"
                android:onClick="back"/>

            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center"
                android:paddingStart="@dimen/padding"
                android:paddingEnd="@dimen/padding"
                android:text="@string/logout"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/logout_dimension" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/padding"
                android:visibility="gone"
                android:textColor="@color/colorDark" />

            <TextView
                android:id="@+id/market_state_value_textview"
                android:elevation="6dp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/market_status_height"
                android:layout_gravity="end|center_vertical"
                android:gravity="center_vertical|center_horizontal"
                android:paddingStart="@dimen/log_out_padding"
                android:paddingEnd="@dimen/log_out_padding"
                android:paddingBottom="2dp"
                android:layout_marginStart="@dimen/mini_margin"
                android:layout_marginEnd="@dimen/mini_margin"
                android:background="@drawable/open_market_status"
                android:textColor="@color/white" />

        </android.support.v7.widget.Toolbar>

        <include
            android:id="@+id/rlStockSearch"
            layout="@layout/stocklist_header_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--<include
            android:id="@+id/llTab"
            layout="@layout/instruments_filter_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height" />-->

        <include
            android:id="@+id/llTab"
            layout="@layout/instruments_filter_md_three_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height" />

        <include
            layout="@layout/stock_quotation_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/trades_page_items_height" />

        <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipe_container"
            android:background="?attr/colorLight"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.widget.SwipeRefreshLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvStocks"
            android:background="?attr/colorLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <include
        android:id="@+id/footer"
        layout="@layout/menu_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>