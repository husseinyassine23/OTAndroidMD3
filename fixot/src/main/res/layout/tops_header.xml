<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="?attr/evenColor"
    android:orientation="horizontal"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:paddingRight="4dp"
    android:paddingLeft="4dp">

    <TextView
        android:id="@+id/tvSymbol"
        style="@style/textListHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:textColor="?attr/colorValues"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="0.4"
        android:padding="@dimen/mini_padding"
        android:text="@string/stock_name_title"  />

    <TextView
        android:id="@+id/tvLast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:textColor="?attr/colorValues"
        android:padding="@dimen/mini_padding"
        android:text="@string/price"
        style="@style/textListHeader"/>

    <TextView
        android:id="@+id/tvTrading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:textColor="?attr/colorValues"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/mini_padding"
        android:text="@string/amount_title"
        style="@style/textListHeader"/>

    <TextView
        android:id="@+id/tvChange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.34"
        android:gravity="center_horizontal"
        android:textColor="?attr/colorValues"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/mini_padding"
        android:text="@string/change_title"
        style="@style/textListHeader"/>

    <TextView
        android:id="@+id/tvChangePercent"
        style="@style/textListHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:textColor="?attr/colorValues"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/mini_padding"
        android:textSize="12sp"
        android:text="@string/change_weight_percent_title" />

</LinearLayout>