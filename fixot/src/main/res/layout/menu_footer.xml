<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="?attr/colorLight"
    android:elevation="12dp"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    android:baselineAligned="true"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/toggleGroup"
        android:elevation="12dp"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="loadFooter"
            android:id="@+id/llMarketIndex"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_marketindex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/market_footer"
                android:tint="?attr/colorValues" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvmenu_marketindex"
                android:layout_gravity="center_horizontal"
                android:text="@string/menu_marketindex"
                android:textColor="?attr/colorValues"
                android:textSize="@dimen/small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="loadFooter"
            android:id="@+id/llPortfolio"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_portfolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/portfolio_footer"
                android:tint="?attr/colorValues" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvmenu_portfolio"
                android:layout_gravity="center_horizontal"
                android:text="@string/menu_portfolio"
                android:textColor="?attr/colorValues"
                android:textSize="@dimen/small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="loadFooter"
            android:id="@+id/llOrders"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/orders_footer"
                android:tint="?attr/colorValues"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/menu_orders"
                android:id="@+id/tvmenu_orders"
                android:textColor="?attr/colorValues"
                android:textSize="@dimen/small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/llFavorites"
            android:onClick="loadFooter"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_stocks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/stock_footer"
                android:tint="?attr/colorValues"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/menu_favorites"
                android:id="@+id/tvmenu_stocks"
                android:textColor="?attr/colorValues"
                android:textSize="@dimen/small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMowazi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="1"
            android:onClick="loadFooter"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_mowazi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mowazi_off"
                android:layout_gravity="center_horizontal"
                android:tint="?attr/colorValues"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/menu_mowazi"
                android:id="@+id/tvmenu_mowazi"
                android:textColor="?attr/colorValues"
                android:textSize="@dimen/small" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/llMore"
            android:onClick="loadFooter"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/more_footer"
                android:tint="?attr/colorValues" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/menu_more"
                android:id="@+id/tvmenu_more"
                android:textColor="?attr/colorValues"
                android:textSize="@dimen/small" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>