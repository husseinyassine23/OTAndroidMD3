<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/item_height"
    android:paddingTop="1sp"
    android:paddingBottom="1sp"
    android:paddingLeft="@dimen/mini_padding"
    android:paddingRight="@dimen/mini_padding"
    android:clipToPadding="false"
    android:id="@+id/lllayout"
    android:gravity="center"
    android:orientation="horizontal">
    <!--android:weightSum="6"-->

    <TextView
        android:id="@+id/tvSector"
        android:layout_width="0dp"
        android:layout_weight="2.9"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:padding="@dimen/mini_padding"
        android:text="@string/stock_id"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="?attr/colorValues"
        android:textSize="@dimen/normal" />

    <TextView
        android:id="@+id/tvIndexValue"
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:padding="@dimen/mini_padding"
        android:text="@string/ask"
        android:textColor="?attr/colorValues"
        android:textSize="@dimen/small" />

    <TextView
        android:id="@+id/tvChangePercent"
        android:layout_width="0dp"
        android:layout_weight="1.3"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"
        android:padding="@dimen/mini_padding"
        android:text="@string/bid"
        android:textColor="?attr/colorValues"
        android:textSize="@dimen/small" />
    <!--android:textDirection="ltr"-->

    <ImageButton
        android:id="@+id/btStocks"
        android:layout_width="@dimen/item_height"
        android:layout_height="@dimen/item_height"
        android:src="@drawable/stock"
        android:scaleType="centerInside"
        android:padding="4sp"
        android:layout_marginStart="@dimen/mini_margin"
        android:layout_marginEnd="@dimen/small_margin"
        android:clipToPadding="false"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:tint="?attr/colorDark"
        android:background="?attr/gray" />

    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small"
        android:layout_marginStart="@dimen/mini_margin"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:visibility="gone"
        android:clipToPadding="false"
        android:text="@string/stock"
        android:background="?attr/gray"
        android:textColor="?attr/colorDark" />
    <!--android:background="@drawable/tradebuttondrawable"-->
    <!--android:id="@+id/btStocks"-->

</LinearLayout>