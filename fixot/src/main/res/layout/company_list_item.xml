<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/mini_padding"
    android:paddingBottom="@dimen/mini_padding"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/namesymbol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.4"
        android:maxLines="2"
        android:textSize="@dimen/small"
        android:layout_gravity="center"
        android:padding="2dp"
        android:paddingStart="@dimen/mini_padding"
        android:text="@string/mowazi_namesymbol"
        android:textColor="@color/mowazi_dark_blue" />

    <TextView
        android:id="@+id/lastupdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:textSize="@dimen/small"
        android:layout_gravity="center"
        android:gravity="start"
        android:text="@string/mowazi_lastupdate"
        android:textColor="@color/mowazi_dark_blue" />


    <ImageView
        android:id="@+id/forbid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.1"
        android:focusable="false"
        android:padding="@dimen/mini_padding"
        android:visibility="gone"
        android:gravity="start|center_vertical"
        android:layout_gravity="start|center_vertical"
        android:focusableInTouchMode="false"
        android:src="@drawable/clearmark"
        android:textColor="@color/mowazi_dark_blue" />

    <ImageView
        android:id="@+id/untransformd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/clearmark"
        android:padding="@dimen/mini_padding"
        android:gravity="start|center_vertical"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="0.8"
        android:focusable="false"
        android:visibility="gone"
        android:focusableInTouchMode="false"
        android:textColor="@color/mowazi_dark_blue" />

    <TextView
        android:id="@+id/companySector"
        android:layout_width="0dp"
        android:layout_weight="1.1"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small"
        android:layout_gravity="center"
        android:gravity="start"
        android:text="@string/sector"
        android:textColor="@color/mowazi_dark_blue" />
</LinearLayout>