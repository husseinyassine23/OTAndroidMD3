<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="?attr/colorMedium"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/llTab"
        android:background="@drawable/instruments_border"
        android:gravity="center"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:id="@+id/tlInstrumentItemsTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            app:tabMaxWidth="0dp"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabTextAppearance="@style/InstrumentsItemsLayoutTextAppearance"
            app:layout_scrollFlags="scroll|enterAlways"
            app:tabBackground="?attr/colorMedium"
            app:tabSelectedTextColor="?attr/colorValues"
            app:tabIndicatorColor="?attr/colorValues"
            app:tabTextColor="?attr/colorValues" />
        <!--app:tabBackground="@drawable/instruments_selector"-->

    </LinearLayout>

</LinearLayout>