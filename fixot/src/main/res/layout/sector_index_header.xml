<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="@dimen/header_height"
    android:layout_height="wrap_content"
    android:background="?attr/colorMedium"
    android:paddingTop="1sp"
    android:paddingBottom="1sp"
    android:paddingLeft="@dimen/mini_padding"
    android:paddingRight="@dimen/mini_padding"
    android:orientation="horizontal">
    <!--@dimen/mini_padding-->

    <TextView
        android:id="@+id/tvStockIDHeader"
        android:layout_width="0dp"
        android:layout_weight="2.9"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:padding="@dimen/mini_padding"
        android:text="@string/sector"
        android:textColor="?attr/colorValues"
        android:textSize="@dimen/normal" />

    <TextView
        android:id="@+id/tvPriceHeader"
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:padding="@dimen/mini_padding"
        android:text="@string/amount_title"
        android:textColor="?attr/colorValues"
        android:textSize="@dimen/normal" />

    <TextView
        android:id="@+id/tvChangePercentHeader"
        android:layout_width="0dp"
        android:layout_weight="1.3"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:padding="@dimen/mini_padding"
        android:gravity="center"
        android:text="@string/change_percent"
        android:textColor="?attr/colorValues"
        android:textSize="12sp" />

    <TextView
        android:layout_width="@dimen/item_height"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:padding="@dimen/mini_padding"
        android:layout_marginEnd="@dimen/small_margin"
        android:textColor="?attr/colorValues"
        android:textSize="12sp" />
</LinearLayout>