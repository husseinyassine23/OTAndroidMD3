<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/item_height"
        android:background="?attr/colorLight"
        android:id="@+id/llItem"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAskNumberItem"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:text="@string/ask_number"
            android:textColor="@color/red_color"
            android:textSize="@dimen/small" />

        <TextView
            android:id="@+id/tvAskQtyItem"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:text="@string/ask_quantity"
            android:textColor="@color/red_color"
            android:textSize="@dimen/small" />

        <TextView
            android:id="@+id/tvPriceItem"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:text="@string/price"
            android:textColor="@color/red_color"
            android:textSize="@dimen/small" />

        <TextView
            android:id="@+id/tvBidQtyItem"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:text="@string/bid_quantity"
            android:textColor="@color/green_color"
            android:textSize="@dimen/small" />


        <TextView
            android:id="@+id/tvBidNumberItem"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:text="@string/bid_number"
            android:textColor="@color/green_color"
            android:textSize="@dimen/small" />
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="10dp"
        android:layout_height="0.5dp"
        android:background="@color/red_color"/>
</LinearLayout>