<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:background="?attr/colorMedium"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layoutDirection="ltr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorDarkHeader"
            android:elevation="4dp"
            android:title="null">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:padding="@dimen/padding"
                android:onClick="back"/>

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/padding"
                android:visibility="gone"
                android:textColor="@color/colorDark" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_vertical|end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/market_state_value_textview"
                    android:elevation="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/market_status_height"
                    android:layout_gravity="center_vertical|end"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginStart="@dimen/mini_margin"
                    android:layout_marginEnd="@dimen/mini_margin"
                    android:layout_marginTop="@dimen/mini_margin"
                    android:layout_marginBottom="@dimen/mini_margin"
                    android:paddingStart="@dimen/log_out_padding"
                    android:paddingEnd="@dimen/log_out_padding"
                    android:paddingBottom="2dp"
                    android:background="@drawable/open_market_status"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/market_time_value_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/mini_margin"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical|end"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="2dp"
                    android:textColor="@color/white" />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <include
            layout="@layout/stocklist_header_search"
            android:id="@+id/rlStockSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/llTab"
            layout="@layout/instruments_filter_md_three_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height" />

        <include
            layout="@layout/stock_quotation_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/trades_page_items_height" />
        <!--@dimen/trades_ticker_height-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvStocks"
            android:background="?attr/colorLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <include

        android:id="@+id/footer"
        layout="@layout/menu_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>