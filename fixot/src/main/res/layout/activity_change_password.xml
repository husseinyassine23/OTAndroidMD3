<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorLight"
    android:id="@+id/rootLayout"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorDarkHeader"
        android:elevation="4dp"
        android:title="null">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:padding="@dimen/padding"
            android:onClick="back"/>

        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center"
            android:paddingStart="@dimen/padding"
            android:paddingEnd="@dimen/padding"
            android:text="@string/logout"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/logout_dimension" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/padding"
            android:visibility="gone"
            android:textColor="@color/colorDark" />

        <TextView
            android:id="@+id/market_state_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/market_status_height"
            android:layout_gravity="end|center_vertical"
            android:gravity="center_vertical|center_horizontal"
            android:paddingStart="@dimen/log_out_padding"
            android:paddingEnd="@dimen/log_out_padding"
            android:paddingBottom="2dp"
            android:layout_marginStart="@dimen/mini_margin"
            android:layout_marginEnd="@dimen/mini_margin"
            android:background="@drawable/open_market_status"
            android:textColor="@color/white" />
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_margin="20sp"
        android:layout_above="@+id/menu_footer"
        android:layout_below="@+id/my_toolbar"
        android:layout_centerInParent="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:textColor="?attr/colorValues"
                android:textStyle="bold"
                android:textSize="@dimen/large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_password"/>


            <LinearLayout
                android:id="@+id/ll_pass_1"
                android:layout_below="@+id/tvTitle"
                android:layout_marginTop="20sp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvFirstPass_1"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:textColor="?attr/colorValues"
                    android:padding="5sp"
                    android:gravity="center"
                    android:layout_margin="5sp"
                    android:text="@string/old_password"/>

                <TextView
                    android:id="@+id/tvSecondPass_1"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:textColor="?attr/colorValues"
                    android:padding="5sp"
                    android:gravity="center"
                    android:layout_margin="5sp"
                    android:text="@string/new_password"/>

                <TextView
                    android:id="@+id/tvVerifyPass_1"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:textColor="?attr/colorValues"
                    android:padding="5sp"
                    android:gravity="center"
                    android:layout_margin="5sp"
                    android:text="@string/verify_password"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pass_2"
                android:layout_below="@+id/tvTitle"
                android:layout_toEndOf="@id/ll_pass_1"
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etFirstPass_1"
                    android:background="@drawable/edittext_border"
                    android:inputType="textPassword"
                    android:layout_marginStart="@dimen/large"
                    android:padding="5sp"
                    android:layout_margin="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp" />

                <EditText
                    android:id="@+id/etSecondPass_1"
                    android:background="@drawable/edittext_border"
                    android:inputType="textPassword"
                    android:layout_marginStart="@dimen/large"
                    android:padding="5sp"
                    android:layout_margin="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp" />

                <EditText
                    android:id="@+id/etVerifyPass_1"
                    android:background="@drawable/edittext_border"
                    android:inputType="textPassword"
                    android:layout_marginStart="@dimen/large"
                    android:padding="5sp"
                    android:layout_margin="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp" />

            </LinearLayout>


            <Button
                android:id="@+id/btnUpdate"
                android:text="@string/update_button"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ll_pass_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:background="?attr/colorDark"
                android:elevation="@dimen/button_elevation"
                android:clipToPadding="false"
                android:layout_gravity="center"
                android:padding="@dimen/mini_padding"
                android:layout_marginTop="@dimen/large"
                android:layout_marginBottom="@dimen/large"
                android:textColor="@color/colorLight"
                />


            <TextView
                android:id="@+id/tvComplexPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnUpdate"
                android:padding="5sp"
                android:layout_marginTop="10sp"
                android:textAlignment="textStart"
                android:visibility="visible"
                android:textColor="?attr/colorValues"
                android:textSize="12sp"
                android:text=""/>


        </RelativeLayout>
    </ScrollView>


    <include
        android:id="@+id/menu_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/menu_footer"
        android:visibility="visible" />

</RelativeLayout>