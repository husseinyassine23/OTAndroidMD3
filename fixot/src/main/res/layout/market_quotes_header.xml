<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/header_height"
    android:id="@+id/llItem"
    android:background="?attr/colorMedium"
    android:padding="@dimen/mini_padding"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvStockHeader"
        android:layout_width="0dp"
        android:layout_weight="0.95"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:padding="@dimen/mini_padding"
        android:text="@string/stock_name_title"
        android:textColor="?attr/colorValues"
        android:textSize="@dimen/small" />

    <TextView
        android:id="@+id/tvPriceHeader"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:padding="@dimen/mini_padding"
        android:text="@string/price"
        android:textColor="?attr/colorValues"
        android:textSize="@dimen/small"/>

    <TextView
        android:id="@+id/tvQuantityHeader"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal|center_vertical"
        android:padding="@dimen/mini_padding"
        android:text="@string/quantity"
        android:textColor="?attr/colorValues"
        android:textSize="@dimen/small" />

    <TextView
        android:id="@+id/tvVolumeHeader"
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:padding="@dimen/mini_padding"
        android:gravity="center"
        android:text="@string/volume"
        android:textColor="?attr/colorValues"
        android:textSize="@dimen/small" />

    <TextView
        android:id="@+id/tvValueHeader"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"
        android:padding="@dimen/mini_padding"
        android:text="@string/Value"
        android:textColor="?attr/colorValues"
        android:textSize="@dimen/small" />

</LinearLayout>