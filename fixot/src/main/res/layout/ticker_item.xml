<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    android:layout_centerVertical="true"
    android:layout_width="match_parent"
    android:id="@+id/rlTickerItem"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tvSectorName"
        android:layout_centerVertical="true"
        android:text="symbol"
        android:gravity="center_vertical"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:textColor="@color/white"
        android:paddingTop="@dimen/mini_padding"
        android:paddingBottom="@dimen/mini_padding"
        android:textSize="@dimen/small"
        android:lines="1"
        android:minLines="1"
        android:maxLines="1"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/ask"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/tvSectorName"
        android:id="@+id/tvprice"
        android:layout_marginStart="4dp"
        android:textSize="@dimen/small"
        android:paddingTop="@dimen/mini_padding"
        android:paddingBottom="@dimen/mini_padding"
        android:lines="1"
        android:minLines="1"
        android:maxLines="1"
        android:layout_marginEnd="1dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tvprice"
        android:textColor="@color/white"
        android:textSize="@dimen/small"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/mini_padding"
        android:paddingBottom="@dimen/mini_padding"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="4dp"
        android:id="@+id/tvQuantity"
        android:lines="1"
        android:minLines="1"
        android:maxLines="1"
        android:layout_height="wrap_content" />




</RelativeLayout>