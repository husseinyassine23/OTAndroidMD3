<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/llLayout"
    android:layout_margin="@dimen/mini_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivItem"
        android:background="?attr/colorDark"
        android:tint="?attr/colorLight"
        android:layout_width="@dimen/menu_item_width"
        android:layout_height="@dimen/menu_item_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/market_index"
        android:padding="@dimen/mini_padding" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/market_index"
        android:gravity="center"
        android:textSize="@dimen/normal"
        android:textColor="?attr/colorValues"
        android:ellipsize="end"
        android:paddingTop="@dimen/mini_padding"
        android:id="@+id/tvItem"/>

</LinearLayout>