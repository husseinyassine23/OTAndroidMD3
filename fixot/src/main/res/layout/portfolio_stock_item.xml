<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorLight"
    android:clipToPadding="false"
    android:orientation="horizontal">


    <Button
        android:id="@+id/trades_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/small_margin"
        android:text="T"
        android:textColor="?attr/colorDark"
        android:background="?attr/gray"
        android:clipToPadding="false"
        android:elevation="@dimen/button_elevation"
        android:visibility="visible"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.8"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/symbol_title"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="?attr/colorValues"
            android:padding="2dp"
            android:text="@string/symbol_title" />

        <TextView
            android:id="@+id/symbol_code"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorValues"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:textDirection="ltr"
            android:padding="2dp"
            android:text="@string/quantity_cost_title" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quantity_cost_title"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorValues"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:textDirection="ltr"
            android:padding="2dp"
            android:text="@string/quantity_cost_title" />


        <TextView
            android:id="@+id/volume_cost_title"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:textDirection="ltr"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorValues"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/quantity_cost_title" />

    </LinearLayout>

    <TextView
        android:id="@+id/bid_ask_title"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.1"
        android:layout_gravity="center_vertical|top"
        android:textColor="?attr/colorValues"
        android:padding="@dimen/mini_padding"
        android:gravity="center"
        android:text="@string/bid_ask_title" />

    <LinearLayout
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/unrealized_title"
            style="@style/textStyle"
            android:gravity="center"
            android:textDirection="ltr"
            android:layout_width="wrap_content"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorValues"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="@string/unrealized_title" />

        <TextView
            android:id="@+id/unrealized_percent"
            style="@style/textStyle"
            android:gravity="center"
            android:textDirection="ltr"
            android:layout_width="wrap_content"
            android:padding="2dp"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorValues"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="@string/unrealized_title" />

    </LinearLayout>
</LinearLayout>